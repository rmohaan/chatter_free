<div class="ui inverted menu">
  <div class="ui container">
    <%= link_to "Chatroom", root_path, class: "header item" %>
    <a class="item" href="/">
    Messages
  </a>
  <div class="right menu">
    <div class="ui dropdown item">
      Account <i class="dropdown icon"></i>
      <div class="menu">
        <% if !logged_in? %>
          <div class="item">
            <%= link_to "Log in", login_path, class: "ui primary"%>
          </div>
        <%  else %>
          <div class="item">
            <%= link_to "Log out", logout_path, class: "ui primary", method: :delete%>
          </div>
        <% end %>
      </div>
    </div>
    <% if !logged_in? %>
      <div class="item">
        <%= link_to "Sign up", login_path, class: "ui primary button"%>
      </div>
    <% end %>
  </div>
  </div>
</div>