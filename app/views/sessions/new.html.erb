<h2 class="ui center aligned medium icon header">
  <i class="circular power off icon icon-color"></i>
  Chat Colony
</h2>

<%= render "layouts/notifications" %>

<div class="ui container placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |form| %>
        <div class="field">
          <%= form.label :username, "Username" %>
          <div class="ui left icon input">
            <%= form.text_field :username %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field">
          <%= form.label :password, "Password" %>
          <div class="ui left icon input">
            <%= form.password_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>

         <%= form.button "Login", class: "ui orange submit button" %>
      <% end %>
      
    </div>
    <div class="middle aligned column">
      <div class="ui big orange button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>